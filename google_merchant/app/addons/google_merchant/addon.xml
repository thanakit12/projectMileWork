<?xml version="1.0"?>
<addon scheme="3.0" edition_type="ROOT,ULT:VENDOR">
    <id>google_merchant</id>
    <version>1.1.7</version>
    <priority>100500</priority>
    <status>active</status>
    <settings>
        <sections>
            <section id="general">
                <items>
                    <item id="setting_addon">
                        <name>การติดตั้งไฟล์ config google_merchant addon</name>
                        <type>header</type>
                    </item>
                    <item id="description">
                        <type>template</type>
                        <default_value>description.tpl</default_value>
                    </item>
                </items>
            </section>
            <section id="setting_brand">
                <items>
                    <item id="brand_header">
                        <type>header</type>
                    </item>
                    <item id="brand_value">
                        <type>input</type>
                        <default_value>รุ่นรถ</default_value>
                    </item>
                </items>
            </section>
        </sections>
    </settings>
    <supplier>Thanakit</supplier>
    <authors>
        <author>
            <name>thanakit</name>
        </author>
    </authors>
    <compatibility>
        <core_edition>
            MULTIVENDOR
        </core_edition>
    </compatibility>
    <queries>
        <item for="install">
            CREATE TABLE IF NOT EXISTS `?:google_merchant` (
            `id` mediumint(8) UNSIGNED NOT NULL AUTO_INCREMENT,
            `product_id` mediumint(8) NOT NULL,
            `body_request` varchar(255) NOT NULL DEFAULT '',
            `timestamp`  int(11) UNSIGNED DEFAULT 0,
            `method` varchar(255) NOT NULL DEFAULT '',
            PRIMARY KEY (`id`,`product_id`)
            ) ENGINE=INNODB AUTO_INCREMENT=1 DEFAULT CHARSET=utf8;
        </item>
        <item for="uninstall">
            DROP TABLE IF EXISTS `?:google_merchant`
        </item>
    </queries>
</addon>